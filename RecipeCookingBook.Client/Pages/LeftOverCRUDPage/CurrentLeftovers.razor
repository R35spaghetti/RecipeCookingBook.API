@page "/leftover"
@using RecipeCookingBook.Client.Components.LeftoverTable
@using RecipeCookingBook.Client.Components.Search
@using RecipeCookingBook.Client.Components.Pagination
@inherits CurrentLeftoversBase

<button type="button" class="btn btn-primary" @onclick="AddLeftover_Click">Add leftovers</button>
<h1 class="Head">Leftovers</h1>


<div class="row">
    <div class="col-md-10">
        <Search OnSearchChanged="SearchChanged"/>
    </div>
</div>

<div class="row">
    <div class="col">
        <LeftoverTable Leftover="LeftoversList"/>
    </div>
</div>


<div class="row">
    <div class="col">
        <Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage"/>
    </div>
</div>

@code {

    protected Task AddLeftover_Click()
    {
        NavManager.NavigateTo("/createLeftover");
        return Task.CompletedTask;
    }

}